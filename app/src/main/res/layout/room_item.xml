<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/state_room_button">

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/room_join_button"
        android:layout_centerVertical="true"
        android:background="@drawable/state_room_button"
        android:visibility="visible"/>

    <com.example.socketiochatapplication.CircularImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/room_image"
        android:contentDescription="@string/room"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerInside"
        android:background="@drawable/round_button_transparent"
        android:src="@android:drawable/ic_menu_myplaces" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/room_name"
        android:text="@android:string/unknownName"
        android:layout_marginLeft="180dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="34dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/room_name_tooltip"
        android:layout_marginTop="14dp"
        android:text="@string/room"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:textSize="16sp" />

</RelativeLayout>